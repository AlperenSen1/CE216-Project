<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ieu.ce216.group7.artifactmanager.ArtifactListController">

    <VBox alignment="TOP_CENTER" prefHeight="664.0" prefWidth="806.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <GridPane hgap="5.0">

                <Label text="Filter by Tags" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <ListView fx:id="tagFilterList" GridPane.columnIndex="1" GridPane.rowIndex="6" prefHeight="80.0" prefWidth="200.0" />

                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="133.0" />
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="239.0" />
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="142.0" />
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="ArtifactName" />
                    <TextField fx:id="artifactNameTf" GridPane.columnIndex="1" />
                    <TextField fx:id="disLocationTf" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    <TextField fx:id="civilizationTf" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <ComboBox fx:id="categoryCb" prefHeight="25.0" prefWidth="247.0" GridPane.columnIndex="3">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Sculpture" />
                                <String fx:value="Manuscript" />
                                <String fx:value="Weapon" />
                                <String fx:value="Tool" />
                                <String fx:value="Jewelry" />
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <ComboBox fx:id="compositionCb" prefHeight="25.0" prefWidth="239.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Gold" />
                                <String fx:value="Clay" />
                                <String fx:value="Papyrus" />
                                <String fx:value="Stone" />
                                <String fx:value="Wood" />
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <DatePicker fx:id="disDateDp" prefHeight="25.0" prefWidth="247.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                    <TextField fx:id="currPlaceTf" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <TextField fx:id="dimensionsTf" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                    <TextArea fx:id="weightTf" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <ChoiceBox fx:id="tagsCC" prefHeight="25.0" prefWidth="248.0" GridPane.columnIndex="3" GridPane.rowIndex="4">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="hellenistic" />
                                <String fx:value="neoclassical" />
                                <String fx:value="contemporary" />
                                <String fx:value="sword" />
                                <String fx:value="bow" />
                                <String fx:value="axe" />
                                <String fx:value="necklace" />
                                <String fx:value="ring" />
                            </FXCollections>
                        </items>
                    </ChoiceBox>

                    <Label text="Civilization" GridPane.rowIndex="1" />
                    <Label text="Composition" GridPane.rowIndex="2" />
                    <Label text="CurrentPlace" GridPane.rowIndex="3" />
                    <Label text="Weight" GridPane.rowIndex="4" />
                    <Label text="Category" GridPane.columnIndex="2" />
                    <Label text="DiscoveryLocation" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Label text="DiscoveryDate" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <Label text="Dimensions" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                    <Label text="Tags" GridPane.columnIndex="2" GridPane.rowIndex="4" />

                    <Button fx:id="searchArtifactBtn" onAction="#onSearchArtifactBtnClick" prefHeight="25.0" prefWidth="244.0" text="Search" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                </children>
            </GridPane>

            <TableView prefHeight="200.0" prefWidth="200.0" fx:id="artifactTable">
                <columns>
                    <TableColumn prefWidth="75.0" text="ID" fx:id="idCol"/>
                    <TableColumn prefWidth="150.0" text="Art.Name" fx:id="nameCol" />
                    <TableColumn prefWidth="100.0" text="Category" fx:id="categoryCol" />
                    <TableColumn prefWidth="100.0" text="Disc.Location" fx:id="disLocCol" />
                    <TableColumn prefWidth="100.0" text="Civilization" fx:id="civilCol" />
                    <TableColumn prefWidth="100.0" text="Composition" fx:id="compositionCol" />
                    <TableColumn prefWidth="100.0" text="Curr.Place" fx:id="currPlaceCol" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Edit Selected Artifact" onAction="#onEditArtifactBtnClick" />
                    <Button text="Delete Selected Artifact" onAction="#onDeleteArtifactBtnClick" />
                    <Button fx:id="listByTagBtn" onAction="#onListByTagBtnClick" text="List by Tag" />
                    <Button fx:id="importJsonBtn" onAction="#onImportJsonBtnClick" text="Import JSON" />
                    <Button fx:id="exportJsonBtn" onAction="#onExportJsonBtnClick" text="Export JSON" />
                </HBox>



            </HBox>
        </children>
    </VBox>
</AnchorPane>
